{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Agregar Imagen</div>
				<div class="panel-body">
					<form action="{{ path_for('almacen.producto.imagen',{'idProducto':producto.id}) }}" method="post" autocomplete="off" enctype="multipart/form-data">
						<div class="form-group{{ errors.file ? ' has-error' : ''}}">
							<label for="file">Descripcion</label>
							<input type="file" name="file" id="file" class="form-control" value="{{ old.file }}">
							{% if errors.file %}
								<span class="help-block">{{ errors.file | first }}</span>
							{% endif %}
						</div>

						<button type="submit" class="btn btn-default">Subir</button>

						{{ csrf.field | raw }}
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}