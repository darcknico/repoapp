{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Listado de listas de Compras al Proveedor</div>
				<div class="panel-body">
					{% if data | length %}
					<table class="table table-condensed">
						<thead>
							<tr>
								<th>Nombre</th>
								<th>Fecha Creacion</th>
								<th>items</th>
								<th>Total</th>
								<th>Opciones</th>
							</tr>
							</thead>
							<tbody>
							{% for row in data %}
							<tr>
								<td>{{row.nombre}}</td>
								<td>{{row.creado}}</td>
								<td>{{row.productos.count}}</td>
								<td>$ {{row.total() |number_format(2,',', '.')}}</td>
								<td>
									<a href="{{ path_for('almacen.listacompra.edit',{'id':row.id }) }}" class='btn btn-default btn-xs' role='button'><span class='glyphicon glyphicon-pencil'></span></a>
									<a href="{{ path_for('almacen.listacompra.delete',{'id':row.id }) }}" class='btn btn-default btn-xs' role='button'><span class='glyphicon glyphicon-remove'></span></a>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
					{% else %}
					<label>No hay registros</label>
					{% endif %}
					<a class="btn btn-primary" href="{{ path_for('almacen.listacompra.new') }}">Nueva Lista de Compras</a>
				</div>
			</div>
			<div class="panel-footer">
					<a class="btn btn-primary" href="{{ path_for('home') }}">Volver</a>
			</div>
		</div>
	</div>
{% endblock %}