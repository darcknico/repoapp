{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Listado de Marcas</div>
				<div class="panel-body">
					{% if data | length %}
					{{data}}
					<table class="table table-condensed">
						<thead>
							<tr>
								<th>Producto Nombre</th>
								<th>Cantidad</th>
								<th>Precio</th>
								<th>SubTotal</th>
								<th>Opciones</th>
							</tr>
							</thead>
							<tbody>
							{% for row in data %}
							<tr>
								<td>{{row.producto.nombre}}</td>
								<td>{{row.cantidad}}</td>
								<td>{{row.precio}}</td>
								<td>{{row.subtotal}}</td>
								<td>
									<a href="{{ path_for('almacen.marca') }}/edit/{{row.id}}" class='btn btn-default btn-xs' role='button'><span class='glyphicon glyphicon-pencil'></span></a>
									<a href="{{ path_for('almacen.marca') }}/delete/{{row.id}}" class='btn btn-default btn-xs' role='button'><span class='glyphicon glyphicon-remove'></span></a>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
					{% else %}
					<label>No hay registros</label>
					{% endif %}
					<a class="btn btn-primary" href="{{ path_for('almacen.listaventa.new',{'idUsuario':auth.user.identificadorUsuario}) }}">Nueva Lista de Compras</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}