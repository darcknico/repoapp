{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Cambiar la contraseña</div>
				<div class="panel-body">
					<form action="{{ path_for('auth.password.change')}}" method="post" autocomplete="off">
						<div class="form-group{{ errors.contraseña_old ? ' has-error' : ''}}">
							<label for="contraseña_old">Contraseña Actual</label>
							<input type="password" name="contraseña_old" id="contraseña_old" class="form-control" value="{{ old.contraseña_old }}">
							{% if errors.contraseña_old %}
								<span class="help-block">{{ errors.contraseña_old | first }}</span>
							{% endif %}
						</div>
						<div class="form-group{{ errors.contraseña ? ' has-error' : ''}}">
							<label for="contraseña">Contraseña Nueva</label>
							<input type="password" name="contraseña" id="contraseña" class="form-control" value="{{ old.contraseña }}">
							{% if errors.contraseña %}
								<span class="help-block">{{ errors.contraseña | first }}</span>
							{% endif %}
						</div>
						<button type="submit" class="btn btn-default">Cambiar</button>

						{{ csrf.field | raw }}
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}